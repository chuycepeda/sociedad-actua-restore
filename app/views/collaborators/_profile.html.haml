.profile-section
  .container
    =image_tag "roles/collaborators_2x.png", :class => "profile-logo"
    %h1.inline.title= "Colaborador/#{@collaborator.type_collaborator}"

    .row
      .col-md-3.offset
        .frame.center-block
          = image_tag @collaborator.logo.mid.url, class: "center-block logo"
      .col-md-8.offset--text
        %h1.title= @collaborator.name

        %label= "Descripción"
        %p= @collaborator.description

        %label= "Causas de interés"
        %p= @collaborator.causes_interest.join(', ')

        %hr

        .row
          .col-md-6
            %label= "Sitio web:"
            = link_to truncate(@collaborator.site_url, length: 50),  "//#{@collaborator.site_url}", target: '_blank', class: "social-url" if  @collaborator.site_url.present?
          .col-md-6
            %label= "Facebook:"
            = link_to truncate(@collaborator.facebook_url, length: 50),  "//#{@collaborator.facebook_url}", target: '_blank', class: "social-url" if  @collaborator.facebook_url.present?
          .col-md-6
            %label= "Twitter:"
            = link_to truncate(@collaborator.twitter_url, length: 50),  "//#{@collaborator.twitter_url}", target: '_blank', class: "social-url" if  @collaborator.twitter_url.present?
          .col-md-6
            %label= "Youtube:"
            = link_to truncate(@collaborator.youtube_url, length: 50),  "//#{@collaborator.youtube_url}", target: '_blank', class: "social-url" if  @collaborator.youtube_url.present?
          .col-md-6
            %label= "Instagram:"
            = link_to truncate(@collaborator.instagram_url, length: 50),  "//#{@collaborator.instagram_url}", target: '_blank', class: "social-url" if  @collaborator.instagram_url.present?
          .col-md-6
            %label= "Blog"
            = link_to truncate(@collaborator.blog_url, length: 50),  "//#{@collaborator.blog_url}", target: '_blank', class: "social-url" if  @collaborator.blog_url.present?

        %hr

        %a.btn.btn-default= "Contactar"
